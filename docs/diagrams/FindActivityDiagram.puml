@startuml
!include style.puml

start
:Receive keyword and name word;

if () then ([keyword length <= 4])
  :Check full-word match;
  if () then ([full-word match])
    :Return TRUE;
  else ([no match])
    :Calculate Levenshtein distance;
    if () then ([distance <= 2])
      :Return TRUE (fuzzy match);
    else ([distance > 2])
      :Return FALSE;
    endif
  endif
else ([keyword length > 4])
  :Check full-word match;
  if () then ([full-word match])
    :Return TRUE;
  else ([no match])
    :Check substring match;
    if () then ([substring match])
      :Return TRUE;
    else ([no match])
      :Calculate Levenshtein distance;
      if () then ([distance <= 2])
        :Return TRUE (fuzzy match);
      else ([distance > 2])
        :Return FALSE;
      endif
    endif
  endif
endif

stop
@enduml
